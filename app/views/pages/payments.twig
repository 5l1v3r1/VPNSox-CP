{%  extends "layout.twig" %}

{% block content %}
<div  class="bg-white p-30 m-t-10 brad b-bot-2px-gray-light b-right-1px-gray-light">


            {%  if flash.success %}
                <div class="alert alert-success">
                    {{ flash.success }}
                </div>
            {% endif %}
            {%  if flash.error %}
                <div class="alert alert-danger">
                    {{ flash.error }}
                </div>
            {% endif %}

            <h2 class="text-center p-b-30 m-t-0 page-header">Your Payments</h2>

            <table class="table table-striped table-hover ">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Value</th>
                    <th>Date</th>
                </tr>
                </thead>
                <tbody>
                {% for item in invoices|sort %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td>{{ item.name }}</td>
                    <td>{{ item.plan_expiration | date('M-d-Y') }} - ({{ item.price }}â‚¬)</td>
                    <td>{{ item.date | date('M. d,Y,  H:i A')}}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
</div>

    <!-- /#page-wrapper -->


{% endblock %}