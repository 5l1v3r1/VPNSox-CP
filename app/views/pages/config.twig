{%  extends "layout.twig" %}

{% block content %}
<div  class="bg-white p-30 m-t-10 brad b-bot-2px-gray-light b-right-1px-gray-light">


            {%  if flash.success %}
                <div class="alert alert-success">
                    {{ flash.success }}
                </div>
            {% endif %}
            {%  if flash.error %}
                <div class="alert alert-danger">
                    {{ flash.error }}
                </div>
            {% endif %}

            <h2 class="text-center p-b-30 m-t-0 page-header">Download your config</h2>
            <table class="table table-striped table-hover ">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Download</th>
                    <th>Username:Password</th>
                    <th>Users Online</th>
                    <th>Network</th>

                </tr>
                </thead>
                <tbody>
                {% for item in servers|sort %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td>{{ item.name }}</td>
                        <td><a href="{{ path_for('download', { 'id': item.id }) }}" class="btn btn-primary">Download Config</a></td>
                        <td>{{ account.username }} : {{ account.vpn_pass }}</td>
                        <td>Unavailable</td>
                        <td>{{ item.network }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
</div>
    <!-- /#page-wrapper -->


{% endblock %}