
{%  extends "layout.twig" %}

{% block content %}



<button class="menu-btn btn btn-bordered text-gray-alt text-bold top-left-corner">&#9776; MENU</button>


<div class="row">
    <div class="col-sm-3 text-center">
        <div class="p-10 brad">
            <a href="#" class="center-on-hover">
                <img src="placeholders/avatars/avatar.jpg" alt="" class="img-circle" width="115">
            </a>

            <div >
                <div>
                    <div class="i-block" >
                        <h3 class="m-b-0">{{ account.username }}</h3>
                    </div>
                </div>
                <div>
                    <div class="text-gray-alt i-block" >
                        <span class="m-t-10 d-block">{{ account.email }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-9">
        <div class="bg-white p-30 brad b-bot-2px-gray-light b-right-1px-gray-light">
            <div class="row">
                <div class="col-sm-5 text-center">
                    <div class="circle-50-icon bg-green-dark m-t-10">
                        <div class="iconmelon icon-white" style="color: #FFFFFF;">
                            <i class="fa fa-usd fa-2x"></i>
                        </div>
                    </div>
                    <div class="text-large text-gray-alt">{{ account.credits }}</div>
                    <form action="https://www.coinpayments.net/index.php" method="post">
                        <input type="hidden" name="cmd" value="_pay">
                        <input type="hidden" name="reset" value="1">
                        <input type="hidden" name="merchant" value="6a96f3f0a0f55f93ebbd12f7a6b77bbd">
                        <input type="hidden" name="item_name" value="VPNSox Credits">
                        <input type="hidden" name="currency" value="EUR">
                        <input type="hidden" name="amountf" value="3.00000000">
                        <input type="hidden" name="quantity" value="1">
                        <input type="hidden" name="allow_quantity" value="0">
                        <input type="hidden" name="want_shipping" value="0">
                        <input type="hidden" name="success_url" value="https://panel.vpnsox.org/success">
                        <input type="hidden" name="cancel_url" value="https://panel.vpnsox.org/cancel">
                        <input type="hidden" name="ipn_url" value="https://panel.vpnsox.org/ipn">
                        <input type="hidden" name="allow_extra" value="0">
                        <button type="submit" class="btn btn-primary btn-lg m-t-10">Buy Credits (3â‚¬ = 3 Credit)</button>

                    </form>
                </div>
                <div class="col-sm-7">
                    <h4>Registeration Date</h4>
                    <p class="text-gray-alt">{{ account.confirmed_at | date('m-d-Y') }}</p>
                    <hr>
                    <h4 class="">Plan Expiration</h4>
                    <p class="text-gray-alt">{% if account.plan == 0 %}Choose a plan{% else %}{{ account.plan_date | date('m-d-Y') }}{% endif %}</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div  class="bg-white p-30 m-t-10 brad b-bot-2px-gray-light b-right-1px-gray-light">
    <h2 class="text-center p-b-30 m-t-0 page-header">Plans</h2>
    {% if account.plan <= 0 %}
        <div class="alert alert-info">To start using our services, choose an offer</div>
    {% endif %}
    {%  if flash.success %}
        <div class="alert alert-success">
            {{ flash.success }}
        </div>
    {% endif %}
    {%  if flash.error %}
        <div class="alert alert-danger">
            {{ flash.error }}
        </div>
    {% endif %}
    <!-- TABLE -->
    <div class="col-sm-6">
        <div class="pricing-table">

            <div class="bg-gray-dark table-top-wrapper">
                <div class="table-top bg-green-dark">
                    <div class="iconmelon " style="color: #FFFFFF;">
                        <i class="fa fa-usd fa-2x"></i>

                    </div>
                </div>
            </div>

            <div class="bg-white p-30">

                <div class="text-large text-center">Free</div>

                <div class="table-body">
                    <ul class="checkmarked m-t-10">
                        <li>1 Country</li>
                        <li>Unlimited Access</li>
                        <li>Unlimited Bandwidth</li>
                        <li>24/7 Support</li>
                    </ul>
                </div>
                <hr class="m-t-0 m-b-10">
                <div class="text-center text-large m-b-10">Free /Month</div>
                <a href="{{ path_for('order', { 'plan': '1' }) }}" class="btn btn-primary btn-block btn-lg">Purchase</a>


            </div>

        </div>
    </div>

    <!-- TABLE -->
    <div class="col-sm-6">
        <div class="pricing-table">

            <div class="bg-gray-dark table-top-wrapper">
                <div class="table-top bg-orange">
                    <div class="iconmelon" style="color: #FFFFFF;">
                        <i class="fa fa-diamond fa-2x"></i>

                    </div>
                </div>
            </div>

            <div class="bg-white p-30">
                <div class="text-large text-center">Gold</div>
                <div class="table-body">
                    <ul class="checkmarked m-t-10">
                        <li>All Country</li>
                        <li>Unlimited Access</li>
                        <li>Unlimited Bandwidth</li>
                        <li>24/7 Support</li>
                    </ul>
                </div>
                <hr class="m-t-0 m-b-10">
                <div class="text-center text-large m-b-10">3 Credits /Month</div>
                <a href="{{ path_for('order', { 'plan': '2' }) }}" class="btn btn-primary btn-block btn-lg">Purchase</a>
            </div>

        </div>
    </div>

    &nbsp;



</div>

{% endblock %}
