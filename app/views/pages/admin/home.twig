
{%  extends "admin.twig" %}

{% block content %}



<button class="menu-btn btn btn-bordered text-gray-alt text-bold top-left-corner">&#9776; MENU</button>


    <div class="row">
        <div class="col-sm-3 text-center">
            <div class="p-10 brad">
                <a href="#" class="center-on-hover">
                    <img src="placeholders/avatars/avatar.jpg" alt="" class="img-circle" width="115">
                </a>

                <div >
                    <div>
                        <div class="i-block" >
                            <h3 class="m-b-0">{{ account.username }}</h3>
                        </div>
                    </div>
                    <div>
                        <div class="text-gray-alt i-block" >
                            <span class="m-t-10 d-block">{{ account.email }}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-9">
            <div class="bg-white p-30 brad b-bot-2px-gray-light b-right-1px-gray-light">
                <div class="row">
                    <div class="col-sm-5 text-center">
                        <div class="circle-50-icon bg-green-dark m-t-10">
                            <div class="iconmelon icon-white" style="color: #FFFFFF;">
                                <i class="fa fa-usd fa-2x"></i>
                            </div>
                        </div>
                        <div class="text-large text-gray-alt">{{ account.credits }}</div>
                    </div>
                    <div class="col-sm-7">
                        <h4>Registeration Date</h4>
                        <p class="text-gray-alt">{{ account.confirmed_at | date('m-d-Y') }}</p>
                        <hr>
                        <h4 class="">Plan Expiration</h4>
                        <p class="text-gray-alt">{% if account.plan == 0 %}Choose a plan{% else %}{{ account.plan_date | date('m-d-Y') }}{% endif %}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div  class="bg-white p-30 m-t-10 brad b-bot-2px-gray-light b-right-1px-gray-light">
        <h2 class="text-center p-b-30 m-t-0 page-header">Latest Actions</h2>
        {%  if flash.success %}
            <div class="alert alert-success">
                {{ flash.success }}
            </div>
        {% endif %}
        {%  if flash.error %}
            <div class="alert alert-danger">
                {{ flash.error }}
            </div>
        {% endif %}

        <table class="table table-striped table-hover ">
            <thead>
            <tr>
                <th>Date</th>
                <th>User</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for item in logs %}
                <tr>
                    <td>{{ item.log_date| date('d-m-Y H:i:s') }}</td>
                    <td><a href="logs/{{ item.log_user }}">{{ item.log_user }}</a></td>
                    <td>{{ item.log_action }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        &nbsp;
    </div>


    <div  class="bg-white p-30 m-t-10 brad b-bot-2px-gray-light b-right-1px-gray-light">
        <h2 class="text-center p-b-30 m-t-0 page-header">Latest Invoices</h2>

        <table class="table table-striped table-hover ">
            <thead>
            <tr>
                <th>Date</th>
                <th>User</th>
                <th>Price</th>
                <th>Plan Expiration</th>
            </tr>
            </thead>
            <tbody>
            {% for item in invoices %}
                <tr>
                    <td>{{ item.date| date('d-m-Y H:i:s') }}</td>
                    <td>{{ item.name }}</td>
                    <td>{{ item.price }}â‚¬</td>
                    <td>{{ item.plan_expiration }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        &nbsp;
    </div>

{% endblock %}
