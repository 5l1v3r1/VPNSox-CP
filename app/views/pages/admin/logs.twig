{%  extends "admin.twig" %}

{% block content %}



<button class="menu-btn btn btn-bordered text-gray-alt text-bold top-left-corner">&#9776; MENU</button>


    <div  class="bg-white p-30 m-t-10 brad b-bot-2px-gray-light b-right-1px-gray-light">
        <h2 class="text-center p-b-30 m-t-0 page-header">Latest Actions</h2>
        {%  if flash.success %}
            <div class="alert alert-success">
                {{ flash.success }}
            </div>
        {% endif %}
        {%  if flash.error %}
            <div class="alert alert-danger">
                {{ flash.error }}
            </div>
        {% endif %}

        <table class="table table-striped table-hover ">
            <thead>
            <tr>
                <th>Date</th>
                <th>User</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for item in logs %}
                <tr>
                    <td>{{ item.log_date| date('d-m-Y H:i:s') }}</td>
                    <td>{{ item.log_user }}</td>
                    <td>{{ item.log_action }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        &nbsp;
    </div>



{% endblock %}
